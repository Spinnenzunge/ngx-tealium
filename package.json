{
  "name": "ngx-tealium",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:app": "ng build ngx-tealium-showcase --configuration production",
    "build:lib": "ng build ngx-tealium --configuration production",
    "build:ci": "npm run build:lib && npm run build:app",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:app": "ng test ngx-tealium-showcase --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "test:lib": "ng test ngx-tealium --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "test:ci": "npm run test:lib && npm run test:app",
    "format:check": "prettier --list-different \"**/*.{ts,js,html,css,scss,less,md}\"",
    "format:write": "prettier --write \"**/*.{ts,js,html,css,scss,less,md}\"",
    "prepare": "husky install",
    "postbuild:lib": "copyfiles README.md dist/ngx-tealium",
    "semantic-release": "semantic-release",
    "lint": "ng lint"
  },
  "dependencies": {
    "@angular/animations": "^17.0.8",
    "@angular/common": "^17.0.8",
    "@angular/compiler": "^17.0.8",
    "@angular/core": "^17.0.8",
    "@angular/forms": "^17.0.8",
    "@angular/platform-browser": "^17.0.8",
    "@angular/platform-browser-dynamic": "^17.0.8",
    "@angular/router": "^17.0.8",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.9",
    "@angular-eslint/builder": "17.2.0",
    "@angular-eslint/eslint-plugin": "17.2.0",
    "@angular-eslint/eslint-plugin-template": "17.2.0",
    "@angular-eslint/schematics": "17.2.0",
    "@angular-eslint/template-parser": "17.2.0",
    "@angular/cli": "~17.0.9",
    "@angular/compiler-cli": "^17.0.8",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jasmine": "~4.3.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.53.0",
    "husky": "^8.0.2",
    "jasmine-core": "~4.3.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "lint-staged": "^13.0.3",
    "ng-packagr": "^17.0.3",
    "prettier": "^2.7.1",
    "semantic-release": "^21.0.7",
    "typescript": "~5.2.2"
  },
  "lint-staged": {
    "*.{ts,js,html}": "eslint --cache --fix",
    "*.{ts,js,html,css,scss,md}": "prettier --write"
  }
}
